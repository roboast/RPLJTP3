<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_home_guest">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_judul_berita_terkini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Post Title"
            android:textColor="#000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_berita_terkini"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                design:srcCompat="@drawable/add" />

            <TextView
                android:id="@+id/tv_deskripsi_berita_terkini"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_margin="5dp"
                android:text="Post Description"
                android:textColor="@color/cardview_dark_background" />
        </LinearLayout>



    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            />

        <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_home"
        android:layout_gravity="bottom"
        design:menu="@menu/menu_navbot"


    />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>